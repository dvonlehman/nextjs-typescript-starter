{
  "compilerOptions": {
    "outDir": "build",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5",
    "noImplicitAny": false,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/next.config.js",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}